<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/judul"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/judul"
            />

        <ImageView
            android:id="@+id/send"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/send" />

        <ImageView
            android:id="@+id/notif"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/hearth"
            android:layout_toLeftOf="@id/send"/>

        <ImageView
            android:id="@+id/more"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/more"
            android:layout_toLeftOf="@id/notif"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sg"
            android:layout_width="674dp"
            android:layout_height="112dp"
            android:src="@drawable/screenshot_2023_03_09_195300"
            app:srcCompat="@drawable/screenshot_2023_03_09_195300" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp" >

        <ImageView
            android:id="@+id/logouph"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/download"
            app:srcCompat="@drawable/download" />

        <TextView
            android:id="@+id/uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/logouph"
            android:text="Medan Talk"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="150pt"
            android:layout_below="@+id/uname"
            android:layout_marginTop="8dp"
            android:src="@drawable/screenshot_2023_03_09_194852"
            app:srcCompat="@drawable/screenshot_2023_03_09_194852" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/post"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Batal Nikahi Calon Istri, Pria Probolinggo Dihukum Denda Rp 122 Juta  Adi Suganda atau Ganda (23) divonis harus membayar kerugian pada Putri atau Aurilia Putri Christyn (20) sebesar Rp 122.530.000 secara tunai. Sebab, Ganda membatalkan pernikahannya dengan Putri secara sepihak. Dilansir detikJatim, gugatan perdata Putri terhadap Ganda di Pengadilan Negeri Kota Probolinggo, Jawa Timur, telah memasuki sidang putusan." />
    </RelativeLayout>


</FrameLayout>



